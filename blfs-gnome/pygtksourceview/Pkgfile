# Depends on: gtk, gtksourceview, pygobject, pycairo, libglade

name=pygtksourceview
version=2.6.0
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/2.6/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=/usr \
		--disable-docs
	make
	make DESTDIR=$PKG install
}
